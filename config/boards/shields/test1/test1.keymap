#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp KP_N7
                &kp KP_N4
                &mo 1
            >;
        };

        bt_layer {
            bindings = <
                &bootloader
                &bt BT_CLR
                &bt BT_SEL 0
            >;
        };
    };
};