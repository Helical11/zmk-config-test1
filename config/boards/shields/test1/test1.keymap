#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp KP_A
                &kp KP_B
                &kp KP_C
            >;
        };

        bt_layer {
            bindings = <
                &bootloader
                &bt BT_CLR
                &bt BT_SEL 0
            >;
        };
    };
};